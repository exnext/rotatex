<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= name %> ver.<%= version %>
  </title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="./favicon.ico">
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: black;
      color: white;
      font-family: sans-serif;
    }

    .demo {
      position: absolute;
      top: 50%;
      width: 100%;
      transform: translateY(-50%);
      display: flex;
      justify-content: space-around;
    }

    ul {
      background-color: red;
      width: 150px;
      aspect-ratio: 1;

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    li {
      transition: all 1s;
    }

    li > * {
      transition: all 1s;
    }
  </style>
</head>

<body>
  <div class="demo">
    <ul class="rotatex rotatex-rotate rotatex-rotate__left">
      <li style="--angle: 0deg;"><span>Test 1</span></li>
      <li style="--angle: 60deg;"><span>Test 2</span></li>
      <li style="--angle: 120deg;"><span>Test 3</span></li>
      <li style="--angle: 180deg;"><span>Test 4</span></li>
      <li style="--angle: 240deg;"><span>Test 5</span></li>
      <li style="--angle: 300deg;"><span>Test 6</span></li>
    </ul>

    <ul class="rotatex rotatex-rotate rotatex-rotate__right">
      <li style="--angle: 0deg;"><span>Test 1</span></li>
      <li style="--angle: 60deg;"><span>Test 2</span></li>
      <li style="--angle: 120deg;"><span>Test 3</span></li>
      <li style="--angle: 180deg;"><span>Test 4</span></li>
      <li style="--angle: 240deg;"><span>Test 5</span></li>
      <li style="--angle: 300deg;"><span>Test 6</span></li>
    </ul>

    <ul class="rotatex">
      <li class="r-0"><span>Test 1</span></li>
      <li class="r-60"><span>Test 2</span></li>
      <li class="r-120"><span>Test 3</span></li>
      <li class="r-180"><span>Test 4</span></li>
      <li class="r-240"><span>Test 5</span></li>
      <li class="r-300"><span>Test 6</span></li>
    </ul>

    <ul id="dynamic"></ul>

    <ul id="animation" class="rotatex-rotate rotatex-rotate__left"></ul>

    <ul id="interval"></ul>
  </div>

  <script>
    let ul1 = document.getElementById('dynamic');
    let rotatex1 = new Rotatex(ul1, { scrollBy: 10, scrollLimit: 360 });

    rotatex1.on('rotate', (event) => {
      console.log(event);
    });

    for (i = 1; i <= 10; i++) {
      let li = document.createElement('li');
      let span = document.createElement('span');

      span.innerText = 'Test ' + i;
      li.appendChild(span);
      ul1.appendChild(li);
    }

    let ul1a = document.getElementById('animation');
    let rotatex1a = new Rotatex(ul1a, { scrollBy: 10, scrollLimit: 360 });

    rotatex1a.on('rotate', (event) => {
      console.log(event);
    });

    for (i = 1; i <= 10; i++) {
      let li = document.createElement('li');
      let span = document.createElement('span');

      span.innerText = 'Test ' + i;
      li.appendChild(span);
      ul1a.appendChild(li);
    }

    let ul2 = document.getElementById('interval');
    let rotatex2 = new Rotatex(ul2);

    let x = 0;

    let interval = setInterval(function () {
      x++;
      let li = document.createElement('li');
      let span = document.createElement('span');

      span.innerText = 'Test ' + x;
      li.appendChild(span);
      ul2.appendChild(li);

      if (!(x % 3)) {
        li.classList.add('r-off');
      }

      if (x == 20) {
        clearInterval(interval);
      }
    }, 1000);
  </script>
</body>

</html>