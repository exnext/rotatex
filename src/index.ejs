<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= name %> ver.<%= version %>
  </title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="./favicon.ico">
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: black;
      color: white;
      font-family: sans-serif;
    }

    .demo {
      position: absolute;
      top: 50%;
      width: 100%;
      transform: translateY(-50%);
      display: flex;
      justify-content: space-around;
    }

    ul {
      background-color: red;
      width: 200px;
      height: 200px;
    }
  </style>
</head>

<body>
  <div class="demo">
    <ul class="rotatex">
      <li style="--start-angle: 0deg;"><span>Test 1</span></li>
      <li style="--start-angle: 60deg;"><span>Test 2</span></li>
      <li style="--start-angle: 120deg;"><span>Test 3</span></li>
      <li style="--start-angle: 180deg;"><span>Test 4</span></li>
      <li style="--start-angle: 240deg;"><span>Test 5</span></li>
      <li style="--start-angle: 300deg;"><span>Test 6</span></li>
    </ul>
  
    <ul class="rotatex">
      <li class="r-0"><span>Test 1</span></li>
      <li class="r-60"><span>Test 2</span></li>
      <li class="r-120"><span>Test 3</span></li>
      <li class="r-180"><span>Test 4</span></li>
      <li class="r-240"><span>Test 5</span></li>
      <li class="r-300"><span>Test 6</span></li>
    </ul>
  
    <ul id="dynamic">
      <li><span>Test 1</span></li>
      <li><span>Test 2</span></li>
      <li><span>Test 3</span></li>
      <li><span>Test 4</span></li>
      <li><span>Test 5</span></li>
      <li><span>Test 6</span></li>
    </ul>
  </div>

  <script>
    let ul = document.getElementById('dynamic');
    let rotatex = new Rotatex();
    rotatex.on(ul);
  </script>
</body>

</html>